
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Elysian Motors</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.12.4.js"></script>
  <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <style>
        *{
            font-family: "Palatino", "Helvetica Neue", Helvetica, sans-serif;
        }
        body{
            width: 970px;
            margin: 0px auto;
            padding-left: 10px;
            background: rgb(219,139,22);
            background: linear-gradient(90deg, rgba(219,139,22,1) 0%, rgba(10,12,207,1) 50%, rgba(219,139,22,1) 100%);
            color: white;
        }
        .nav navbar-nav li a{
            color: white;
        }
        .twocolumn{
            display: inline-block;
            width: 480px;
            vertical-align: top;
        }
        span {
            color: red;
        }
        .header{
            display: inline;    
        }
        textarea{
            width: 600px;
            height: 250px;
            color: black;
        }
        .navbar {
            background: rgb(219,139,22);
            background: linear-gradient(90deg, rgba(219,139,22,1) 0%, rgba(10,12,207,1) 50%, rgba(219,139,22,1) 100%);
        }
        a {
            color: white;
        }
        .navbar-inverse .navbar-brand {
            color: white;
        }
        input {
            color: black;
        }
        button {
            color: black;
        }
        select {
            color: black;
        }
        .navbar-inverse {
        border-color: white;
        }

        .container
        {
            width: 940px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="height: 60px;">
        <div class="container">
            <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" style="font-size: 25px;"><img src="~/images/elysianmotorslogo.png" alt="Elysian Motors Logo" style="width: 40px; height: 40px; display: inline-block"/>Elysian Motors</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" >
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AddVehicle" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;">Create Listing</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="SellerList" style="margin-left: -17.5px; font-size: 16px; padding-top: 25px;">Vehicles For Sale</a></li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <strong><p><em>&copy;2019 - Elysian Motors (Developed by Gordon Allen)</em></strong>
            </p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>